0100 REM "LKC012 - 04/12/12 GR04 file conversion
0110 SETESC DT_ERR; SETERR DT_ERR
0120 CALL "CDS095",GR04,"XXGR04","",GR04$
0130 EXTRACT RECORD(GR04,END=EOJ)GR04$
0140 LET GR04.EMAIL$=CVS(GR04.EMAIL$,8)
0145 IF GR04.ADMIN$=" " THEN LET GR04.ADMIN$="N"
0150 WRITE RECORD(GR04)GR04$
0160 GOTO 0130

8000 DT_ERR:
8010 CALL "CDS063",STR(TCB(5+3*(ERR=127))),Y$,PGM(-2)
8020 IF Y.ERRSTS=0 THEN SETERR 0 ELSE IF Y.ERRSTS=2 THEN RETURN
8030 RETRY

9000 EOJ:
9010 IF TCB(13) THEN EXIT
9020 RUN "CDS001"
